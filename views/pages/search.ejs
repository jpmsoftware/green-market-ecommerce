<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/animations.css">
  <link rel="stylesheet" href="/css/responsive.css">
  <link rel="icon" href="/img/favicon.png">
  <title>Green Market - Resultados de búsqueda</title>
</head>

<body>

  <%- include('../partials/loading') %>

  <%- include('../partials/header') %>

    <!-- ARRAY OF PRODUCTS RETURNED BY APP.JS -->
    <section class="busqueda">
      <h2>Resultados de búsqueda</h2>

      <p class="message" id="message"></p>
      <div class="card-collection" style="text-align: center;">
        <% for (var i=0; i < products.length; i++) { %>
          <div class="card visible">
            <img src="/data/thumbs/<%= products[i].imagen %>" alt="thumb" class="product-thumb">
            <div class="container">
              <h4 class="product-name"><%= products[i].nombre %></h4>
              <p class="product-description"><%= products[i].descripcion %></p>
              <p class="product-price">$ <%= products[i].precio %>
              </p>
            </div>
          </div>
          <% } %>
      </div>
    </section>

    <%- include('../partials/modal') %>

        <%- include('../partials/footer') %>

            <%- include ('../partials/msg') %>

              <div class="mask" id="mask"></div>

              <script src="/js/main.js"></script>

</body>
</html>